{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": [
            "es2015"
        ],
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "sourceMap": true,
        "target": "es5"
    },
    "exclude": [
        "docs",
        "node_modules"
    ]
}
